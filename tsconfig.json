{
  "compilerOptions": {
    "target": "es2015",
    "jsx": "react-jsx",
    "module": "es2015",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib/esm",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts", "src/TestValues"]
}
