{
  "compilerOptions": {
    "target": "es2015",
    "jsx": "react",
    "module": "es2015",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib/esm",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts", "src/TestValues"]
}
